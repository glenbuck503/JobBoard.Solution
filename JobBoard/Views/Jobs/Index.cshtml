
@using JobBoard.Models;

<h1>Epicodus Job Board</h1>
@if (Model.Count == 0)
{
  <p>There are no items on the job board.</p>
}
<ul>
  @foreach (Job job in Model)
  {
    <li><a href='/jobs/@job.Id'>@job.Title</a></li>
  }
</ul>

<a href="/jobs/new">Add a new job.</a>

<form action="/jobs/delete" method="post">
  <button type="submit" name="button">Clear All Jobs (not recommended)</button>
</form>